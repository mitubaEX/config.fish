{
  //fontsizeを小さく
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,

  // wrap
  "editor.wordWrap": "on",

  //ミニマップをfalse
  "editor.minimap.enabled": false,

  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.insertSpaces": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "off",

  // vim
  // vim plugins
  "vim.easymotion": true,
  "vim.easymotionMarkerForegroundColorTwoChar": "#ff0000",
  "vim.easymotionMarkerForegroundColorOneChar": "#ff0000",
  // ys: add
  // cs: change
  // ds: delete
  "vim.surround": true, //surroundを有効にする
  "vim.sneak": true,
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,

  // common config
  "vim.visualstar": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 500,
  "vim.leader": "<space>",

  // insert keybinds
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  // normal keybinds
  "vim.normalModeKeyBindingsNonRecursive": [
    // accelerated jk
    {
      "before": ["j"],
      "commands": [
        {
          "command": "accelerated.cursorDown"
        }
      ]
    },
    {
      "before": ["k"],
      "commands": [
        {
          "command": "accelerated.cursorUp"
        }
      ]
    },

    // easy motion
    {
      "before": ["leader", "leader"],
      "after": ["leader", "leader", "leader", "j"]
    },

    // common keybinds
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "o"],
      "after": ["o", "<Esc>"]
    },
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "a"],
      "commands": ["workbench.action.findInFiles"],
      "when": ["!searchInputBoxFocus"]
    },
    {
      "before": ["leader", ";"],
      "commands": ["extension.openRecentFiles"]
    },

    // goto definition and implementation
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"],
      "when": ["editorFocus"]
    },

    // 候補のフォーカスの移動
    {
      "before": ["ctrl+n"],
      "commands": ["selectNextSuggestion"],
      "when": ["editorTextFocus"]
    },
    {
      "before": ["ctrl+p"],
      "commands": ["selectPrevSuggestion"],
      "when": ["editorTextFocus"]
    },

    // 動作が不安定なので修正
    {
      "before": ["u"],
      "commands": [
        {
          "command": "undo"
        }
      ]
    }, //デフォルトだと戻りすぎるので修正
    {
      "before": ["<C-r>"],
      "commands": [
        {
          "command": "redo"
        }
      ]
    }, //デフォルトだと戻りすぎるので修正
    {
      "before": ["<C-o>"],
      "commands": [
        {
          "command": "workbench.action.navigateBack"
        }
      ]
    }, //デフォルトだと上手く動作しないので修正
    {
      "before": ["<C-i>"],
      "commands": [
        {
          "command": "workbench.action.navigateForward"
        }
      ]
    }, //デフォルトだと上手く動作しないので修正
    {
      "before": ["x"],
      "commands": [
        {
          "command": "deleteRight"
        }
      ]
    }, //xで削除してもレジスタを占領しない
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    }, //検索結果を画面中央に
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    }, //検索結果を画面中央に
    {
      "before": ["*"],
      "after": ["*", "z", "z"]
    }, //検索結果を画面中央に
    {
      "before": ["#"],
      "after": ["#", "z", "z"]
    }, //検索結果を画面中央に
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    }, //インデント調整(repeat可能)
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }, //インデント調整(repeat可能)
    {
      "before": ["<Leader>", ":"],
      "commands": [
        {
          "command": "workbench.action.showCommands"
        }
      ]
    }, //コマンドパレット

    // bookmarks
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["bookmarks.list"]
    },

    // copy file path
    {
      "before": ["<leader>", "c"],
      "commands": ["copyRelativeFilePath"],
      "when": ["editorFocus"]
    },

    // rpsec
    {
      "before": ["<leader>", "q"],
      "commands": ["extension.runFileOnRspec"],
      "when": ["editorLangId == 'ruby'"]
    },
    {
      "before": ["<leader>", "Q"],
      "commands": ["extension.runLineOnRspec"],
      "when": ["editorLangId == 'ruby'"]
    },

    // clever-split
    {
      "before": ["<leader>", "-"],
      "commands": [":vsplit"]
    },

    // paste "0 register
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "0", "p"]
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "0", "P"]
    },

    // explorer表示
    {
      "before": ["ctrl+w", "d"],
      "commands": ["workbench.view.explorer"]
    }
  ],

  // visual keybinds
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  // status bar for vim
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
  "vim.statusBarColors.insert": "#BF616A",
  "vim.statusBarColors.visual": "#B48EAD",
  "vim.statusBarColors.visualline": "#B48EAD",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",
  "vim.statusBarColors.surroundinputmode": "#007ACC",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",

  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "prettier.singleQuote": true,
  "prettier.arrowParens": "always",
  "prettier.trailingComma": "es5",
  "terminal.integrated.copyOnSelection": true,
  "breadcrumbs.enabled": true,
  "diffEditor.renderSideBySide": false,
  "go.gopath": "~/.ghq",
  "workbench.editor.showTabs": false,
  "workbench.colorTheme": "Nord",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.iconTheme": "vscode-icons",

  "vscode-run-rspec-file.custom-command": "bin/rspec",
  "workbench.colorCustomizations": {
    "statusBar.background": "#B48EAD",
    "statusBar.noFolderBackground": "#B48EAD",
    "statusBar.debuggingBackground": "#B48EAD"
  }
}
